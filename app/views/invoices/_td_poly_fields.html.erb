<%= fields_for "invoice[tax_and_discount_polies_attributes][#{tax_and_discount_poly.persisted? ? tax_and_discount_poly.id : tax_and_discount_poly.hash}]", tax_and_discount_poly do |form|%>
  <% if tax_and_discount_poly.persisted? %>
    <div class="row" data-invoice-target="taxAndDiscountPoly" id="<%= dom_id(tax_and_discount_poly) %>" data-params=<%= params %>>
  <% else %>
    <div class="row" data-invoice-target="taxAndDiscountPoly" id="<%= tax_and_discount_poly.hash %>" data-params=<%= params %>>
  <% end %>

    <div class="col-md-4">
      <%= form.text_field :name, class: "form-control" %>
    </div>  

    <div class="col-md-4">
      <%= form.number_field :amount, class: "form-control", data: {action: "change->invoice#handleTaxAndDiscountPolyChange" }%>
    </div>  

    <div class="col-md-4">
      <%= form.text_field :td_type, class: "form-control" %>
    </div>

    <%= form.hidden_field :id %>
  </div>
<% end %>

<div id="tax_and_discount_poly">
</div>
