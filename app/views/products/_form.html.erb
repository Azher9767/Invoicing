<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 
  
  <div class="row mb-3">
    <div class="col">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="col">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="col">
      <%= form.label :unit_rate, class: "form-label" %>
      <%= form.text_field :unit_rate, class: "form-control" %>
    </div>

    <div class="col">
      <%= form.label :category_id, class: "form-label" %>
      <%= form.select :category_id, options_for_select(current_user.categories.map { |category| [category.name, category.id ] }), {prompt: "select category"}, class: "form-select" %>
    </div>

    <div class="col">
      <%= form.label :unit, class: "form-label" %>
      <%= form.text_field :unit, class: "form-control" %>
    </div>
  </div>

  <div class="col">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>